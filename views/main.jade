doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Urban Wildlife web app using iNaturalist database')
    meta(name='author', content='Zhi Hao (David) Chen')
    title Urban Wildlife App
    link(href='/lib/bootstrap-3.2.0-dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel='icon', href='../images/icon.png')


body
  div.navbar.navbar-default.navbar-static-top(role='navigation')
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        div
          img#logo(src='../images/icon.png')
          a.navbar-brand(href=toMain) Urban Wildlife
      div.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href=toNew)
              span.glyphicon.glyphicon-plus
              |  Add Entry
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown') 
              span.glyphicon.glyphicon-book
              |  Reference
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='/users/reference') Species Names
              li
                a(href='../temp') Maps
              li
                a(href='../temp') Checklist
          li
            a(href=toRecords)
              span.glyphicon.glyphicon-list
              |  Records
          li
            a(href=toProfile)
              span.glyphicon.glyphicon-user
              |  Profile
          li
            a(href='../')
              span.glyphicon.glyphicon-log-out
              |  Logout

  div.container
    div.jumbotron
      div.row
        div.col-xs-6.col-sm-6
          img.img-rounded.pull-right(src='#{userdata.user_icon_url}')
        div.col-xs-6.col-sm-6
          h2.pull-left Hello, #{userdata.login}
      div#map-canvas
      div.row.voffset.text-center
        | Dashboard
      div.row
        ul.list-inline.text-center
          li.list-group-item
            div.row.mainIcon
              span.glyphicon.glyphicon-plus
            div.row
              a(href='/users/newrecord') Add record
          li.list-group-item
            div.row.mainIcon
              span.glyphicon.glyphicon-picture
            div.row
              | Maps
          li.list-group-item
            div.row.mainIcon
              span.glyphicon.glyphicon-info-sign
            div.row
              a(href='/users/reference') Species Names
          li.list-group-item
            div.row.mainIcon
              span.glyphicon.glyphicon-list-alt
            div.row
              | Checklist
      div.row.footer
        
  
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='https://maps.googleapis.com/maps/api/js?v=3.exp')
  script(src='/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')
  script(src='/javascripts/map.js')
