doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Urban Wildlife web app using iNaturalist database')
    meta(name='author', content='Zhi Hao (David) Chen')
    title Urban Wildlife App
    link(href='/lib/bootstrap-3.2.0-dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel='icon', href='../../images/icon.png')


body
  div.navbar.navbar-default.navbar-static-top(role='navigation')
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        div
          img#logo(src='../../images/icon.png')
          a.navbar-brand(href=toMain) Urban Wildlife
      div.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href=toNew)
              span.glyphicon.glyphicon-plus
              |  Add Entry
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown') 
              span.glyphicon.glyphicon-book
              |  Reference
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='#') Species Names
              li
                a(href='/projects') Projects
          li
            a(href=toRecords)
              span.glyphicon.glyphicon-list
              |  Records
          li
            a(href=toProfile)
              span.glyphicon.glyphicon-user
              |  Profile
          li
            a(href='../../')
              span.glyphicon.glyphicon-log-out
              |  Logout

  div.container
    div.jumbotron
      div.row
        a.btn.homecolor(href='/users/main') Back to Home
      h1 Species Name Search
      p Currently only supports Canadensys search.  Entering partial words may return no results.
      
      div.voffset50
      
      form(role='form', method='post')
              div.form-group
                label(for='search') Canadensys Search
                input.form-control#search(type='text', placeholder='Please enter Scientific name, Common name or VASON taxon identifier.', name='search')
              button.btn.btn-success.pull-right(type='submit') Search Again

      div.voffset50

      div.row
        if searchResults.results[0].numMatches == 0
          h4 No Results were found for "#{searchResults.results[0].searchedTerm}"
        else
          h4 Search Results for "#{searchResults.results[0].searchedTerm}"
          for r in searchResults.results[0].matches
            div.record
              p Scientific Name: #{r.scientificName}
              p Common Name(s):
              ul
                for common in r.vernacularNames
                  li
                    p #{common.vernacularName}(#{common.language})
              p Taxon ID: #{r.taxonID}
              p Taxon Rank: #{r.taxonRank}

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')
