extends layout

block extraHeader
  link(rel='icon', href='../images/icon.png')

block navbar
  div.navbar-collapse.collapse
    ul.nav.navbar-nav.navbar-right
      li
        a(href=profile) Profile
      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown') Reference
          span.caret
        ul.dropdown-menu(role='menu')
          li
            a(href='#') Guides
          li
            a(href='#') Maps
          li
            a(href='#') Checklist
          li.divider
          li.dropdown-header Nav header
          li
            a(href='#') Seperated link
          li
            a(href='#') One more separated link
      li
        a(href='#') Records
      li
        a(href='../') Logout


block content
  div.container
    div.row
      div.text-center
        img.img-thumbnail(src='../images/placeholder.png')
        form(role='form', method='post')
          div.form-group
            label(for='guess') Species Guess
            input.form-control#guess(type='text', placeholder='What the best guess you got?', name='guess')
          div.form-group
            label(for='seen') Observered on(YYYY-01-03)
            input.form-control#seen(type='text', placeholder='YYYY-DD-MM', name='seen')
          div.form-group
            label(for='desc') Description
            input.form-control#desc(type='text', placeholder='Describe stuff', name='desc')
          button.btn.btn-default(type='submit') Submit

block scripts
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')