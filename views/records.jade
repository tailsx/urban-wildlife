doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Urban Wildlife web app using iNaturalist database')
    meta(name='author', content='Zhi Hao (David) Chen')
    title Urban Wildlife App
    link(href='/lib/bootstrap-3.2.0-dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel='icon', href='../../images/icon.png')


body
  div.navbar.navbar-default.navbar-static-top(role='navigation')
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        div
          img#logo(src='../../images/icon.png')
          a.navbar-brand(href=toMains) Urban Wildlife
      div.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href=toNew)
              span.glyphicon.glyphicon-plus
              |  Add Entry
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown') 
              span.glyphicon.glyphicon-book
              |  Reference
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='/users/reference') Species Names
              li
                a(href='../temp') Maps
              li
                a(href='../temp') Checklist
          li
            a(href='#')
              span.glyphicon.glyphicon-list
              |  Records
          li
            a(href=toProfile)
              span.glyphicon.glyphicon-user
              |  Profile
          li
            a(href='../../')
              span.glyphicon.glyphicon-log-out
              |  Logout

  div.container
    div.jumbotron
      div.row
        a.btn.btn-success(href='/users/main') Back to Profile
      h1 List all records
      for result in results
        div.row.record
          if result.latitude == null && result.longitude == null
            p No coordinates given.  Sorry
          else
            img(src='https://maps.googleapis.com/maps/api/staticmap?center=#{result.latitude},#{result.longitude}&zoom=#{result.map_scale}&size=600x300&maptype=roadmap&markers=color:green%7Clabel:A%7C#{result.latitude},#{result.longitude}')
          p Species Guess: #{result.species_guess}
          if result.description == ""
            p Description: No Description available
          else
            p Description: #{result.description}
          p Photos:
          for photo in result.photos
              p #{photo.square_url}
              img(src=photo.medium_url)

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')
