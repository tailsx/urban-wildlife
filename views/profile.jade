extends layout

block extraHeader
  link(rel='icon', href='../images/icon.png')

block navbar
  div.navbar-collapse.collapse
    ul.nav.navbar-nav.navbar-right
      li
        a(href=profile) Profile
      li.dropdown
        a.dropdown-toggle(href='#', data-toggle='dropdown') Reference
          span.caret
        ul.dropdown-menu(role='menu')
          li
            a(href='#') Guides
          li
            a(href='#') Maps
          li
            a(href='#') Checklist
          li.divider
          li.dropdown-header Nav header
          li
            a(href='#') Seperated link
          li
            a(href='#') One more separated link
      li
        a(href=toRecords) Records
      li
        a(href='../') Logout


block content
  div.container
    div.jumbotron
      h1 #{info}'s Profile
      p With iNaturalist since: #{creation}
      p Observation count: 
        a(href=toRecords) #{count}
      p E-mail: #{email}

block scripts
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')