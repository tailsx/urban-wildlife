doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Urban Wildlife web app using iNaturalist database')
    meta(name='author', content='Zhi Hao (David) Chen')
    title Urban Wildlife App
    link(href='/lib/bootstrap-3.2.0-dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel='icon', href='../../images/icon.png')


body
  div.navbar.navbar-default.navbar-static-top(role='navigation')
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        div
          img#logo(src='../../images/icon.png')
          a.navbar-brand(href='#') Urban Wildlife
      div.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href=profile) Profile
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown') Reference
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='#') Guides
              li
                a(href='#') Maps
              li
                a(href='#') Checklist
              li.divider
              li.dropdown-header Nav header
              li
                a(href='#') Seperated link
              li
                a(href='#') One more separated link
          li
            a(href='#') Records
          li
            a(href='../') Logout

  div.container
    div.jumbotron
      div.row
        a.btn.btn-primary(href='/users/main') Back to Profile
      h1 List all records
      for result in results
        div.row.record
          p Species Guess: #{result.species_guess}
          p Description: #{result.description}
          p Photos:
          for photo in result.photos
              p #{photo.medium_url}
              img(src=photo.medium_url)

  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')
