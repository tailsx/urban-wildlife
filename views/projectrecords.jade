doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(name='description', content='Urban Wildlife web app using iNaturalist database')
    meta(name='author', content='Zhi Hao (David) Chen')
    title Urban Wildlife App
    link(href='http://fonts.googleapis.com/css?family=Montserrat:700,400', rel='stylesheet',type='text/css')
    link(href='/lib/bootstrap-3.2.0-dist/css/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
    link(rel='icon', href='../../images/icon.png')


body
  div.navbar.navbar-default.navbar-static-top(role='navigation')
    div.container
      div.navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='.navbar-collapse')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        div
          img#logo(src='../../images/icon.png')
          a.navbar-brand(href=toMains) Urban Wildlife
      div.navbar-collapse.collapse
        ul.nav.navbar-nav.navbar-right
          li
            a(href=toNew)
              span.glyphicon.glyphicon-plus
              |  Add Entry
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown') 
              span.glyphicon.glyphicon-book
              |  Reference
              span.caret
            ul.dropdown-menu(role='menu')
              li
                a(href='/users/reference') Species Names
              li
                a(href='/projects') Projects
          li
            a(href='#')
              span.glyphicon.glyphicon-list
              |  Records
          li
            a(href=toProfile)
              span.glyphicon.glyphicon-user
              |  Profile
          li
            a(href='../../')
              span.glyphicon.glyphicon-log-out
              |  Logout

  div.container
    div.jumbotron
      div.row
        a.btn.homecolor(href='/projects') Back to Projects
      h1 Project observations
      for result in results
        div.row.record
          div.container
            div.row
              div.col-xs-4
                if result.latitude != null && result.longitude != null
                  img.center-block(src='https://maps.googleapis.com/maps/api/staticmap?center=#{result.latitude},#{result.longitude}&zoom=#{result.map_scale}&size=300x300&maptype=roadmap&markers=color:green%7Clabel:A%7C#{result.latitude},#{result.longitude}')
                  p.text-center Nearest city: 
                    b #{result.place_guess}
                else
                  p Can not display map.  No coordinates given
              div.col-xs-8.record-info
                h2 #{result.species_guess}
                p 
                  b ID Number:
                  |  #{result.id}
                p 
                  b Original link: 
                  a(href='#{result.uri}') iNaturalist link
                p 
                  b Identification Count:
                  |  #{result.identifications_count}
                p 
                  b Identification Count:
                  |  #{result.identifications_count}
            div.row
              button.btn.btn-default.pull-right(type='button', data-toggle='collapse', data-target='.photos-section') Toggle Pictures
            div.voffset10
            div.row.collapse.in.photos-section
              if result.photos.length == 0
                p No were added to this observation
              else  
                for photo in result.photos
                  div.col-xs-4.text-center
                    a.linktext(href=photo.medium_url)
                      img(src=photo.small_url)


  script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
  script(src='/lib/bootstrap-3.2.0-dist/js/bootstrap.min.js')
  script(src='https://maps.googleapis.com/maps/api/js?v=3.exp')
